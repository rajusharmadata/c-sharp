@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
    <!-- Hero Section -->
    <header class="bg-primary text-white text-center py-5">
        <div class="container p-0 m-0">
            <h1 class="display-4">Welcome to My Portfolio</h1>
            <p class="lead">Showcasing my projects, skills, and achievements</p>
            <a href="#projects" class="btn btn-light btn-lg">Explore My Work</a>
        </div>
    </header>

    <div class="container my-5">
        <!-- Skills Section -->
        <section id="skills" class="text-center my-5">
            <h2 class="mb-4">My Skills</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm p-4">
                        <h5 class="card-title">Web Development</h5>
                        <p>HTML, CSS, Bootstrap, JavaScript, React.js</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-4">
                        <h5 class="card-title">Backend Development</h5>
                        <p>Node.js, Express.js, C#, .NET MVC</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-4">
                        <h5 class="card-title">Database Management</h5>
                        <p>SQL, MongoDB, Firebase</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="my-5">
            <h2 class="text-center mb-4">My Projects</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="~/images/project1.jpg" class="card-img-top" alt="Project 1">
                        <div class="card-body">
                            <h5 class="card-title">Project 1</h5>
                            <p class="card-text">A web app for task management.</p>
                            <a href="#" class="btn btn-primary">View Project</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="~/images/project2.jpg" class="card-img-top" alt="Project 2">
                        <div class="card-body">
                            <h5 class="card-title">Project 2</h5>
                            <p class="card-text">E-commerce website using React.js.</p>
                            <a href="#" class="btn btn-primary">View Project</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="~/images/project3.jpg" class="card-img-top" alt="Project 3">
                        <div class="card-body">
                            <h5 class="card-title">Project 3</h5>
                            <p class="card-text">AI-powered chatbot application.</p>
                            <a href="#" class="btn btn-primary">View Project</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Me Section -->
        <section id="about" class="text-center my-5">
            <h2 class="mb-4">About Me</h2>
            <p>I am a passionate software developer with experience in full-stack development. 
               I enjoy solving complex problems and building innovative applications.</p>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="text-center my-5">
            <h2 class="mb-4">Get In Touch</h2>
            <p>Feel free to reach out for collaborations or job opportunities.</p>
            <a href="mailto:your-email@example.com" class="btn btn-success">Contact Me</a>
        </section>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 My Portfolio | All Rights Reserved</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
